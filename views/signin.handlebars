				<input type="password" name="password" class='form-control' style="text-align:center;" placeholder="***//..\/..\\***"/>
			</div>
		</fieldset>

		<div class'form-group'>
			<div class='col-md-6' style="float:none; margin:auto;">
				<input type="submit" class="btn btn-sm form-control purpleButton" value="Hail Eris!"/>
			</div>
		</div>
