	<form id="local-reg" class="collapse" action="/local-reg" method="post">
		<fieldset class='form-group'>
			<div class='col-md-6' style="float:none; margin:auto;">
				<p></p>
				<label>Novel Title:</label>
				<input type="text" name="username" class="form-control" style="text-align:center;" placeholder="Donnie@Office.of.My.High.Reverence.the.Polyfather.swoosh"/>
