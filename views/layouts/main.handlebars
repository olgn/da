<!-- views/layouts/main.handlebars -->
<!DOCTYPE html>
<html lang="en" ng-app="webApp">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="User Authentication">
	<meta name="author" content="">
	
	<title>Dimensional Adventurer</title>
	<link href="/content/link_to_icon.png" rel="icon">

	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
	<link rel="stylesheet" href="/scripts/bootstrap-tagsinput/dist/bootstrap-tagsinput.css">

	<!-- Jquery -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

	<!-- Angular -->
	<script src="/scripts/angular/angular.js"></script>

	<!-- d3 / nvd3 / angular-nvd3 -->
	<script src="/scripts/angular-nvd3/node_modules/d3/d3.js"></script>
	<script src="/scripts/angular-nvd3/node_modules/nvd3/build/nv.d3.js"></script>
	<script src="/scripts/angular-nvd3/dist/angular-nvd3.js"></script>
	<link rel="stylesheet" href="/scripts/angular-nvd3/node_modules/nvd3/build/nv.d3.css">

	<!-- ng-ui-bootstrap -->
	<script src="/scripts/angular-ui-bootstrap/dist/ui-bootstrap-tpls.js"></script>

	<!-- Angular App Scripts -->
	<script src="/ng/app.js"></script>
</head>
<body ng-controller="webController">
	<nav class="navbar navbar-default" role="navigation" style="background-color:#ffffff; ">
		<div class="sectionContainer" style="width:100%; margin-bottom:0px; border-left:none; border-right:none; border-top:none;">

			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/">Dimensional Adventurer</a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					<li>
						<a href="/poetry">Poetry</a>
					</li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					{{#if user}}
						<li>
							<a href="/account">My Account</a>
						</li>
						<li>
							<a href="/logout">Log Out</a>
						</li>
					{{else}}
						<li>
							<a href="/signin">Sign In</a>
						</li>
					{{/if}}
				</ul>
			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-->
	</nav>

	<div class="container col-md-12">
		{{#if error}}
			<p class="alert alert-warning">{{error}}</p>
		{{/if}}

		{{#if success}}
			<p class="alert alert-success">{{success}}</p>
		{{/if}}
		
		{{#if notice}}
			<p class="alert alert-info">{{notice}}</p>
		{{/if}}
		
		<!--where our other templates will insert-->
		{{{body}}}
	</div> <!-- /container -->

	<!-- Latest compiled and minified JavaScript -->
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/typeahead.js/0.11.1/typeahead.bundle.min.js"></script>
	<!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script> -->
	<script src="/scripts/bootstrap-tagsinput/dist/bootstrap-tagsinput.js">
	<script src="/scripts/bootstrap-tagsinput/bootstrap-tagsinput-angular.min.js"></script>

</body>
</html>
